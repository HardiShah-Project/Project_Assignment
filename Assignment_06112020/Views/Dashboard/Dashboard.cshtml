@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-user-circle fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge" id="CountCustomers">
                                <span class="spantxt">
                                    @if (ViewBag.CountEmployees != null)
                                    {
                                    @ViewBag.CountEmployees;
                                    }
                                </span>

                            </div>
                            <div class="spntxt">Employees!</div>
                        </div>
                    </div>
                </div>
                <a href="#" class="viewDetails" data-type="customers">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-8" id="tab1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Month-Wise Employees Joined
                </div>

                <div class="panel-body">
                    <canvas id="JoiningChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-8" id="tab2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Month-Wise Employees Released
                </div>

                <div class="panel-body">
                    <canvas id="ReleaseChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-8" id="tab3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Month-Wise Projects Start
                </div>

                <div class="panel-body">
                    <canvas id="StartChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-8" id="tab4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Month-Wise Projects End
                </div>

                <div class="panel-body">
                    <canvas id="EndChart"></canvas>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-custom">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-5">
                            <i class="fa fa-tasks fa-5x"></i>
                        </div>
                        <div class="col-xs-7 text-right">
                            <div class="huge" id="CountOrders">
                                <span class="spantxt">
                                    @if (ViewBag.CountProjects != null)
                                    {
                                    @ViewBag.CountProjects;
                                    }
                                </span>
                            </div>
                            <div class="spntxt">Projects!</div>
                        </div>
                    </div>
                </div>
                <a href="#" class="ProjectDetails" data-type="customers">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-Emp">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-user-circle fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="spntxt1">Employee Skills!</div>
                        </div>
                    </div>
                </div>
                <a href="#" class="EmpSkillDetails" data-type="customers">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-skill" id="prjskl">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-tasks fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="spntxt1">Project Skill!</div>
                        </div>
                    </div>
                </div>
                <a href="#" class="PrjSkillDetails" data-type="customers">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel"> <span class="glyphicon glyphicon-search"></span> View Details </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ProjectModal" tabindex="-1" role="dialog" aria-labelledby="ProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
